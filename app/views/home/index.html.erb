<% @posts.each do |post| %>

	<% if post.published? %>
	    <h4><%= post.title %></h4>
	    <small><%= post.created_at.strftime("%e %b %Y")%></small>
	    <p><%= post.body.html_safe %></p>
	    <br>
    <% end %>

    <% if post.comments.empty? %>
    	<h6>No comments yet...</h6>
    <% else %>
    	<% if current_user && (current_user.has_role? :admin) %>
    	<h5>Comments:</h5>
		<%= render post.comments %>
		<% end %>
	<% end %>

	<button type="button" class="btn btn-info" data-toggle="collapse" data-target="#<%= post.id %>">
    	Add a comment
    </button>
     
    <div id="<%= post.id %>" class="collapse"> 	
    	<h5>Add a new comment:</h5>
		<%= form_for([post, post.comments.build]) do |f| %>
		  <div class="field">
		    <%= f.label 'Your name' %><br />
		    <%= f.text_field :commenter, :class => "span8"%>
		  </div>
		  <div class="field">
		    <%= f.label 'comment' %><br />
		    <%= f.text_area :body, :rows => 10, :class => "span8" %>
		  </div>
		  <div class="actions">
		    <%= f.submit %>
		  </div>
		<% end %>
	</div>

<% end %>

