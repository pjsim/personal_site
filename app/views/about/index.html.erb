
<div class="container">
<div class="row-fluid">

	<div class="span8">
		<%= render 'about/about' %>
		<dl class="dl-horizontal">
			<button type ="button" class="btn btn-info" data-toggle="collapse" data-target="#mySkills">
				Skills
			</button>
			<div id="mySkills" class="collapse">
				<%= render 'about/skills'%>
			</div>
			<button type ="button" class="btn btn-info" data-toggle="collapse" data-target="#myEducation">
				Education
			</button>
			<div id="myEducation" class="collapse" >
				<%= render 'about/education' %>
			</div>
			<button type ="button" class="btn btn-info" data-toggle="collapse" data-target="#myExperience">
				Experience
			</button>
			<div id="myExperience" class="collapse" >
				<%= render 'about/experience' %>
			</div>
		</dl>
	</div>

	<div class="span1">
	</div>
	
	<div class="span3">
		<%= render 'about/pic' %>
	</div>

</div>
</div>


<button type="button" class="btn btn-info" data-toggle="collapse" data-target="#contact_form">
        Send me an email
    </button>
     
    <div id="contact_form" class="collapse"> 
    <br>
    <%= simple_form_for(@enquirer) do |f| %>
        <%= f.error_notification %>

        <%= f.input :name,  :input_html => { :class => "span5"}, :placeholder => "Your name", :autofocus => true, :required => true %>
        <%= f.input :email, :input_html => { :class => "span5"}, :placeholder => "Your email", :required => true %> 
        <%= f.input :phone, :input_html => { :class => "span5"} %> 
        <%= f.input :message, :input_html => { :rows => 10, :class => "span9"}, :placeholder => "Your Message", :required => true %>
        <%= f.input :message_type, :collection => ['General enquiry', 'Website error', 'Website advice'], :default => 'General enquiry' %>
        <%= f.submit 'Send Email', :class => 'btn btn-success' %>

    <% end %>
        <br> 
        <br> 
        <br> 
        <br> 
    </div>

