<%= simple_form_for(@enquirer) do |f| %>
  <%= f.error_notification %>


    <%= f.input :name,  :input_html => { :class => "span5"}, :placeholder => "Your name", :autofocus => true, :required => true %>
    <%= f.input :email, :input_html => { :class => "span5"}, :placeholder => "Your email", :required => true %> 
    <%= f.input :phone, :input_html => { :class => "span5"} %> 
    <%= f.input :message, :input_html => { :rows => 10, :class => "span9"}, :placeholder => "Your Message", :required => true %>
    <%= f.input :message_type, :collection => ['General enquiry', 'Website error'], :default => 'General enquiry' %>
    <%= f.submit 'Send Enquiry', :class => 'btn btn-success' %>


<% end %>